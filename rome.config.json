{
	"$schema": "node_modules/rome/configuration_schema.json",
	"files": {
		"ignore": ["node_modules"]
	},
	"javascript": {
		"formatter": {
			"semicolons": "always",
			"quoteProperties": "preserve",
			"quoteStyle": "single",
			"trailingComma": "all"
		}
	},
	"formatter": {
		"enabled": true,
		"indentSize": 2,
		"indentStyle": "space",
		"lineWidth": 96
	},
	"linter": {
		"enabled": true
	},
	"organizeImports": {
		"enabled": true
	}
}
